<!DOCTYPE html>
<html lang="en">

<head>
  <title>Users</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/user-view-profile.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <!-- <script defer src="/scripts/resources.js"></script> -->
</head>

<body>
  <%- include('partials/_header.ejs') %>
    <%- include('partials/_footer.ejs') %>
      <main class="container">
        <section class="user-profile-main">
          <h1 class="title-header">My Profile</h1>
          <section class="profile-details">
            <div class="profile-photo"><img src="<%= user[0].profile_image_url %>" alt="profile image" /></div>
            <div class="profile-info">
              <h2 class="profile-header">Username:</h2>
              <p class="profile-field">
                <%= user[0].username %>
              </p>
              <h2 class="profile-header">Email:</h3>
                <p class="profile-field">
                  <%= user[0].email %>
                </p>
                <h2 class="profile-header">First Name:</h3>
                  <p class="profile-field">
                    <%= user[0].first_name %>
                  </p>
                  <h2 class="profile-header">Last Name:</h3>
                    <p class="profile-field">
                      <%= user[0].last_name %>
                    </p>
                    <h2 class="profile-header">About Me:</h3>
                      <p class="profile-field">
                        <%= user[0].bio %>
                      </p>
            </div>
          </section>
          <div class="button-area">
            <a href="/users/<%= userId %>/edit"><button class="edit-profile-button">Edit Profile</button></a>
          </div>
        </section>
      </main>
</body>

</html>
